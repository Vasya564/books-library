<main>
    <h3 class="heading">Search Books</h3>
    <form action="/books" method="GET" class="search-form">
        <div class="form-field">
            <label class="form-field__label">Title</label>
            <input type="text" name="title" value="<%= searchOptions.title %>" class="input-form__input">
        </div>
        <div class="form-field">
            <label class="form-field__label">Published After</label>
            <input type="date" name="publishedAfter" value="<%= searchOptions.publishedAfter %>" class="input-form__input">
        </div>
        <div class="form-field">
            <label class="form-field__label">Published Before</label>
            <input type="date" name="publishedBefore" value="<%= searchOptions.publishedBefore %>" class="input-form__input">
        </div>
        <div class="search-form__btn">
            <button type="submit" class="btn authors__btn">Search</button>
        </div>
    </form>
    <br>
    <section class="books">
    <% books.forEach(book => { %>
        <a href="/books/<%= book.id %>">
            <img height="150" width="100" src="<%= book.coverImagePath %>" class="book__img">
            <p><%= book.title %> </p>
        </a>
    <% }) %>
    </section>
</main>  